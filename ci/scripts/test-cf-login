#!/bin/bash

set -eu

: ${VAULT_URI:?required}
: ${VAULT_TOKEN:?required}

header() {
    echo
    echo "###############################################"
    echo
    echo $*
    echo
}

header "Setting up safe..."
safe target "$VAULT_ALIAS" "$VAULT_ADDR" -k
echo "$VAULT_TOKEN" | safe auth token
safe read secret/handshake

header "Testing Cloud Foundry login"
pwd
ls -la

. ./kit/bin/lh login 

exit 0

