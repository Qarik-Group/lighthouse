  [BOSH_CLIENT]="admin"
#  [CF_API]="safe get secret/exodus/\${BASE_ENV}/cf:api_url"
#  [CF_API,type]="command"
  [CF_ORG]="system"
  [CF_SPACE]="dev" 
  [CF_USERNAME]="admin"
  [BOSH_ALIAS]="\${BASE_ENV}"
)

declare -A pcf_vault_defaults=( 
  [BOSH_CLIENT]="admin"
  [CF_DOMAIN]=""
  [CF_API]="https://api.\${CF_DOMAIN}"
  [CF_ORG]="system"
  [CF_SPACE]="dev" 
  [CF_USERNAME]="admin"
  [CF_DOMAIN]="optional"
)

