  [BOSH_CA_CERT]="required"
  [BOSH_CLIENT]="required"
  [BOSH_CLIENT_SECRET]="required"
  [BOSH_ENVIRONMENT]="required"
  [CF_API]="required"
  [CF_SKIP_SSL_VALIDATION]="optional"
  [CF_ORG]="required"
  [CF_SPACE]="required" 
  [CF_PASSWORD]="required"
  [CF_USERNAME]="required"
  [CF_DOMAIN]="optional"
  [BOSH_ALIAS]="required"
  [BOSH_IP]="required"
)

