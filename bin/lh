  [BOSH_CLIENT]="admin"
  [CF_DOMAIN]=""
  [CF_API]="https://api.${CF_DOMAIN}"
  [CF_ORG]="system"
  [CF_SPACE]="dev" 
  [CF_USERNAME]="admin"
  [CF_DOMAIN]="optional"
)

declare -A custom_variables=(
  [CF_PASSWORD]="LH_VAULT_CF_PASSWORD_PATH"
  [BOSH_CA_CERT]="LH_VAULT_BOSH_CA_CERT_PATH"
  [BOSH_CLIENT_SECRET]="LH_VAULT_BOSH_CLIENT_SECRET_PATH"
)

