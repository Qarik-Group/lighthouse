  echo "TODO"
  echo "TODO"
  echo "TODO"
  ${return_by} ${rc}
}

help_usage() {
  declare rc=${1:-1}
  declare return_by=${2:-"exit"}
  echo "Usage: $(basename $0) help"
  echo "TODO"
  echo "TODO"
  echo "TODO"
  ${return_by} ${rc}
}

init_usage() {
  declare rc=${1:-1}
  declare return_by=${2:-"exit"}
  echo "Usage: $(basename $0) init"
  echo "  Create a directory and copy over the data files to the default"
  ${return_by} ${rc}
}

