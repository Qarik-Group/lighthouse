  [BOSH_CLIENT]="admin"
  [CF_API]="safe get secret/exodus/${BASE_ENV}/cf:api_url"
  [CF_API,type]="command"
  [CF_ORG]="system"
  [CF_SPACE]="dev" 
  [CF_USERNAME]="admin"
  [BOSH_ALIAS]="${BASE_ENV}"
  [BOSH_ENVIRONMENT]="${BASE_ENV}"
  [BOSH_IP]="safe get secret/exodus/${BASE_ENV}/bosh:url"
  [BOSH_IP,type]="command"
)

