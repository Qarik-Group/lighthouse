  [CF_PASSWORD]="${VAULT_PATH}/cf/admin_user:password"
  [BOSH_CA_CERT]="${VAULT_PATH}/bosh/ssl/ca:certificate"
  [BOSH_CLIENT_SECRET]="${VAULT_PATH}/bosh/users/admin:password"

)

