  [CF_PASSWORD]="VAULT_CF_PASSWORD_PATH"
  [BOSH_CA_CERT]="VAULT_BOSH_CA_CERT_PATH"
  [BOSH_CLIENT_SECRET]="VAULT_BOSH_CLIENT_SECRET_PATH"
)

